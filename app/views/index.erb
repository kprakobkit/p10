<h1>Welcome</h1>

<form action="/recipes" method="POST">
  <input type="text" name="search">
  <input type="submit">
</form>

<ul>
  <% if @result  %>
    <h2><%= @result_total %></h2>
    <% @result.collect do |result| %>
      <li>
      <%= result.name %>
      </li>
    <% end %>
  <% end %>
</ul>

